menuconfig  HTTP_DOWNLOAD
	bool "HTTP downloader"

if HTTP_DOWNLOAD

config HTTP_DOWNLOAD_MAX_FRAGMENT_SIZE
	int "Fragment size"
	range 512 2048 if BSD_LIBRARY && HTTP_DOWNLOAD_TLS
	default 2048 if BSD_LIBRARY && HTTP_DOWNLOAD_TLS
	range 512 4096
	default 4096
	help
	  Size of the data fragments reported to the application in each event.
	  When using BSD library and TLS, the fragment can not exceed 2.3kB.
	  When not using TLS, prefer a larger fragment size to reduce the
	  bandwidth overhead due to the HTTP headers.

config HTTP_DOWNLOAD_MAX_RESPONSE_SIZE
	int "Response size"
	default HTTP_DOWNLOAD_MAX_FRAGMENT_SIZE
	help
	  Buffer to accommodate for the HTTP response.
	  Must be large enough to accomodate for a full fragment.

config HTTP_DOWNLOAD_STACK_SIZE
	int "Thread stack size"
	default 2048

config HTTP_DOWNLOAD_SOCK_TIMEOUT_MS
	int "Receive timeout, in milliseconds"
	default -1
	range -1 30000
	help
	  Socket timeout for recv() calls, in milliseconds.
	  Set to -1 disable.

config HTTP_DOWNLOAD_IPV6
	bool "Prefer IPv6 connections"
	help
	  Prefer IPv6 protocol but fallback to
	  IPv4 when the hostname can't be resolved.

config HTTP_DOWNLOAD_TLS
	bool "Download over HTTPS"

module=HTTP_DOWNLOAD
module-dep=LOG
module-str=HTTP downloader
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"

if HTTP_DOWNLOAD_LOG_LEVEL_DBG

config HTTP_DOWNLOAD_LOG_HEADERS
	bool "Log HTTP headers to Console [Debug]"

endif

endif