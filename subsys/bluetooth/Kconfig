menu "Nordic nRF Bluetooth"

config NRF_BT
	bool
	prompt "Enable Bluetooth"
	default n
	help
	  Enable Bluetooth functionality

if NRF_BT
rsource "common/Kconfig"
rsource "services/Kconfig"
endif # NRF_BT

if BT_LL_NRFXLIB
rsource "controller/Kconfig"
endif # CONFIG_BT_LL_NRFXLIB

endmenu
