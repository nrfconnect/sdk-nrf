	select BT_CTLR_ADV_PERIODIC_SUPPORT
	select BT_CTLR_ADV_PERIODIC_RSP_SUPPORT
	select BT_CTLR_SYNC_PERIODIC_SUPPORT
	select BT_CTLR_SYNC_PERIODIC_RSP_SUPPORT
	select BT_CTLR_SYNC_TRANSFER_SENDER_SUPPORT
