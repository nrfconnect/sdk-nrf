	depends on (SOC_SERIES_BSIM_NRFXX || SOC_SERIES_NRF52 || SOC_COMPATIBLE_NRF5340_CPUNET ||\
			    SOC_NRF54H20_CPURAD || SOC_SERIES_NRF54L || SOC_SERIES_NRF71)
	depends on DT_HAS_NORDIC_BT_HCI_SDC_ENABLED
	help
	  Use SoftDevice Link Layer implementation.

