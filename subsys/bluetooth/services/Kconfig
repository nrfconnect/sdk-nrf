# Kconfig - NCS BLE service configuration options

comment "Service configuration"

config NRF_BT_HIDS
	bool
	prompt "Enable HIDS"
	select NRF_BT_SVC_COMMON
	help
	  Enable HIDS functionality

if NRF_BT_HIDS

config NRF_BT_HIDS_MAX_CLIENT_COUNT
	int "Maximum HIDS clients"
	default 1
	range 1 BT_MAX_CONN
	help
	 The maximum number of devices that HID can connect to.

config NRF_BT_HIDS_ATTR_MAX
	int "Maximum number of GATT attribute descriptors"
	default 30
	range 0 50
	help
	  Maximum number of GATT attribute descriptors that can be set for HIDS.

config NRF_BT_HIDS_INPUT_REP_MAX
	int "Maximum number of HIDS Input Report descriptors"
	default 5
	range 0 10
	help
	  Maximum number of HIDS Input Reports that can be set for HIDS.

config NRF_BT_HIDS_OUTPUT_REP_MAX
	int "Maximum number of HIDS Output Report descriptors"
	default 5
	range 0 10
	help
	  Maximum number of HIDS Output Reports that can be set for HIDS.

config NRF_BT_HIDS_FEATURE_REP_MAX
	int "Maximum number of HIDS Feature Report descriptors"
	default 5
	range 0 10
	help
	  Maximum number of HIDS Feature Reports that can be set for HIDS.

config NRF_BT_HIDS_SYS_LOG_LEVEL
	int "HIDS log level"
	depends on SYS_LOG
	default 2
	range 0 4
	help
	  Sets log level for HIDS.
	  Levels are:
	  - 0 OFF, do not write
	  - 1 ERROR, only write SYS_LOG_ERR
	  - 2 WARNING, write SYS_LOG_WRN in addition to previous level
	  - 3 INFO, write SYS_LOG_INF in addition to previous levels
	  - 4 DEBUG, write SYS_LOG_DBG in addition to previous levels

endif # NRF_BT_HIDS

config NRF_BT_THROUGHPUT
	bool
	prompt "Enable Throughput service"
	default n
	help
	 Enable Nordic GATT throughput BLE service

if NRF_BT_THROUGHPUT
endif # NRF_BT_THROUGHPUT

config NRF_BT_LINK_CTX_MANAGER
	bool
	prompt "Enable BLE Link Context Manager"
	default n
	help
	  Enable Event Manager

if NRF_BT_LINK_CTX_MANAGER

config NRF_BT_LINK_CTX_MANAGER_MEM_BUF_ALIGN
	int "BLE Link Context Manager memory slab buffer alignment"
	default 4
	help
	 The memory buffer must be aligned to an N-byte boundary,
	 where N is a power of 2 larger than 2 (i.e. 4, 8, 16, â€¦).

config NRF_BT_LINK_CTX_MANAGER_SYS_LOG_LEVEL
	int "BLE Link Context Manager log level"
	depends on SYS_LOG
	default 2
	range 0 4
	help
	  Sets log level for BLE Link Context Manager.
	  Levels are:
	  - 0 OFF, do not write
	  - 1 ERROR, only write SYS_LOG_ERR
	  - 2 WARNING, write SYS_LOG_WRN in addition to previous level
	  - 3 INFO, write SYS_LOG_INF in addition to previous levels
	  - 4 DEBUG, write SYS_LOG_DBG in addition to previous levels
endif # NRF_BT_LINK_CTX_MANAGER
