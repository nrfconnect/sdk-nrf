menuconfig EMDS
	bool
	prompt "Emergency Data Storage"
	default n
	help
	  Enable Emergency Data Storage.

if EMDS

config EMDS_SECTOR_SIZE_MULT
	int "Sector size of the emergency data storage area"
	default 1
	help
	  The sector size to use for the emergency data storage area as a
	  multiple of FLASH_ERASE_BLOCK_SIZE.

config EMDS_SECTOR_COUNT
	int "Sector count of the emergency data storage area"
	default 1
	help
	  Number of sectors used for the emergency data storage area

module = EMDS
module-str = emergency data storage
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"

endif # EMDS
