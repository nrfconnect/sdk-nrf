menuconfig PSA_CRYPTO_DRIVER_BUILTIN
	bool
	prompt "PSA Builtin" if !PSA_PROMPTLESS
	depends on PSA_CORE_BUILTIN
	# Fix for NCSDK-13536: Enable builtin if nrf_oberon only due to lacking support
	default y if PSA_CRYPTO_DRIVER_OBERON && !PSA_CRYPTO_DRIVER_CC3XX && \
		     (PSA_WANT_ALG_CBC_PKCS7 || PSA_WANT_ALG_CMAC || \
		      PSA_WANT_ALG_HMAC || PSA_WANT_ALG_HKDF)
	# Fix for NCSDK-13536: Enable builtin if SHA-384 or SHA-512 is enabled
	# as CryptoCell or nrf_oberon don't support it.
	default y if (PSA_WANT_ALG_SHA_384 || PSA_WANT_ALG_SHA_512) && \
		     (PSA_WANT_ALG_HMAC || PSA_WANT_ALG_HKDF)
	# nrf_oberon lacks RSA support
	default y if PSA_CRYPTO_DRIVER_OBERON && !PSA_CRYPTO_DRIVER_CC3XX && \
		     (PSA_WANT_ALG_RSA_OAEP || PSA_WANT_ALG_RSA_PKCS1V15_CRYPT || \
		      PSA_WANT_ALG_RSA_PKCS1V15_SIGN || PSA_WANT_ALG_RSA_PSS)
	help
	  Enables PSA builtin support

if PSA_CRYPTO_DRIVER_BUILTIN

config MBEDTLS_PSA_BUILTIN_HAS_KEY_TYPE
	bool
	default y
	depends on MBEDTLS_PSA_BUILTIN_KEY_TYPE_ECC_KEY_PAIR 	|| \
		   MBEDTLS_PSA_BUILTIN_KEY_TYPE_ECC_PUBLIC_KEY 	|| \
		   MBEDTLS_PSA_BUILTIN_KEY_TYPE_RSA_KEY_PAIR 	|| \
		   MBEDTLS_PSA_BUILTIN_KEY_TYPE_RSA_PUBLIC_KEY 	|| \
		   MBEDTLS_PSA_BUILTIN_KEY_TYPE_AES 		|| \
		   MBEDTLS_PSA_BUILTIN_KEY_TYPE_CHACHA20

config MBEDTLS_PSA_BUILTIN_HAS_CIPHER_SUPPORT
	bool
	default y
	depends on MBEDTLS_PSA_BUILTIN_ALG_ECB_NO_PADDING	|| \
		   MBEDTLS_PSA_BUILTIN_ALG_CBC_NO_PADDING	|| \
		   MBEDTLS_PSA_BUILTIN_ALG_CBC_PKCS7		|| \
		   MBEDTLS_PSA_BUILTIN_ALG_CFB 			|| \
		   MBEDTLS_PSA_BUILTIN_ALG_CTR			|| \
		   MBEDTLS_PSA_BUILTIN_ALG_OFB			|| \
		   MBEDTLS_PSA_BUILTIN_ALG_XTS                  || \
		   MBEDTLS_PSA_BUILTIN_ALG_STREAM_CIPHER

config MBEDTLS_PSA_BUILTIN_HAS_AEAD_SUPPORT
	bool
	default y
	depends on MBEDTLS_PSA_BUILTIN_ALG_CCM || \
		   MBEDTLS_PSA_BUILTIN_ALG_GCM || \
		   MBEDTLS_PSA_BUILTIN_ALG_CHACHA20_POLY1305

config MBEDTLS_PSA_BUILTIN_HAS_MAC_SUPPORT
	bool
	default y
	depends on MBEDTLS_PSA_BUILTIN_ALG_CMAC		|| \
		   MBEDTLS_PSA_BUILTIN_ALG_HMAC

config MBEDTLS_PSA_BUILTIN_HAS_HASH_SUPPORT
	bool
	default y
	depends on MBEDTLS_PSA_BUILTIN_ALG_SHA_1	|| \
		   MBEDTLS_PSA_BUILTIN_ALG_SHA_224	|| \
		   MBEDTLS_PSA_BUILTIN_ALG_SHA_256	|| \
		   MBEDTLS_PSA_BUILTIN_ALG_SHA_384	|| \
		   MBEDTLS_PSA_BUILTIN_ALG_SHA_512      || \
		   MBEDTLS_PSA_BUILTIN_ALG_MD5          || \
		   MBEDTLS_PSA_BUILTIN_ALG_RIPEMD160

config MBEDTLS_PSA_BUILTIN_HAS_ASYM_ENCRYPT_SUPPORT
	bool
	default y
	depends on MBEDTLS_PSA_BUILTIN_ALG_RSA_OAEP 		|| \
		   MBEDTLS_PSA_BUILTIN_ALG_RSA_PKCS1V15_CRYPT

config MBEDTLS_PSA_BUILTIN_HAS_ASYM_SIGN_SUPPORT
	bool
	default y
	depends on MBEDTLS_PSA_BUILTIN_ALG_DETERMINISTIC_ECDSA	|| \
		   MBEDTLS_PSA_BUILTIN_ALG_ECDSA 		|| \
		   MBEDTLS_PSA_BUILTIN_ALG_RSA_PKCS1V15_SIGN	|| \
		   MBEDTLS_PSA_BUILTIN_ALG_RSA_PSS

config MBEDTLS_PSA_BUILTIN_HAS_ECC_SUPPORT
	bool
	default y
	depends on MBEDTLS_PSA_BUILTIN_ALG_DETERMINISTIC_ECDSA 	|| \
		   MBEDTLS_PSA_BUILTIN_ALG_ECDSA		|| \
		   MBEDTLS_PSA_BUILTIN_ALG_ECDH

config MBEDTLS_PSA_BUILTIN_HAS_RSA_SUPPORT
	bool
	default y
	depends on MBEDTLS_PSA_BUILTIN_ALG_RSA_PKCS1V15_CRYPT 	|| \
		   MBEDTLS_PSA_BUILTIN_ALG_RSA_PKCS1V15_SIGN	|| \
		   MBEDTLS_PSA_BUILTIN_ALG_RSA_OAEP		|| \
		   MBEDTLS_PSA_BUILTIN_ALG_RSA_PSS

# MBEDTLS_PSA_BUILTIN_ALG_CBC_MAC - Currently not supported

