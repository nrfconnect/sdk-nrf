	depends on PSA_WANT_ALG_CBC_PKCS7
	default y if !PSA_DEFAULT_OFF && \
		     !(PSA_CRYPTO_DRIVER_ALG_CBC_PKCS7_CC3XX || \
			   PSA_CRYPTO_DRIVER_ALG_CBC_PKCS7_OBERON)

