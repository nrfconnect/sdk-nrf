config PSA_NEED_NRF_RNG_ENTROPY_DRIVER
	bool
	default y
	select PSA_ACCEL_GET_ENTROPY
	depends on (!PSA_USE_CC3XX_CTR_DRBG_DRIVER && !PSA_USE_CC3XX_HMAC_DRBG_DRIVER) && \
				(PSA_USE_CTR_DRBG_DRIVER || PSA_USE_HMAC_DRBG_DRIVER)
