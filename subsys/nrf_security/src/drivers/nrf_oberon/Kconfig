	default y
	depends on PSA_NEED_OBERON_KEY_TYPE_ECC_KEY_PAIR_EXPORT_SECP         || \
			PSA_NEED_OBERON_KEY_TYPE_ECC_KEY_PAIR_EXPORT_MONTGOMERY      || \
			PSA_NEED_OBERON_KEY_TYPE_ECC_KEY_PAIR_EXPORT_TWISTED_EDWARDS

