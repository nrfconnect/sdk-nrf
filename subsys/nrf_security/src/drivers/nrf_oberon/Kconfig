	default y
	depends on PSA_NEED_OBERON_KEY_TYPE_ECC_KEY_PAIR_IMPORT_SECP         || \
			PSA_NEED_OBERON_KEY_TYPE_ECC_KEY_PAIR_IMPORT_MONTGOMERY      || \
			PSA_NEED_OBERON_KEY_TYPE_ECC_KEY_PAIR_IMPORT_TWISTED_EDWARDS

