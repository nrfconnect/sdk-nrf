	bool
	default y
	depends on PSA_WANT_ECC_TWISTED_EDWARDS_255
	depends on PSA_WANT_KEY_TYPE_ECC_KEY_PAIR_GENERATE && !PSA_ACCEL_KEY_TYPE_ECC_KEY_PAIR_GENERATE_TWISTED_EDWARDS_255

