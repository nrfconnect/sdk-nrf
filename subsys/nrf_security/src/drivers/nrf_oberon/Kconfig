	prompt "PSA ChaCha20/Poly1305 support - oberon" if !PSA_PROMPTLESS
	default y if !PSA_DEFAULT_OFF && PSA_WANT_ALG_CHACHA20_POLY1305 && \
		     !PSA_CRYPTO_DRIVER_ALG_CHACHA20_POLY1305_CC3XX

