	bool
	default y
	depends on PSA_WANT_ECC_MONTGOMERY_448
	depends on PSA_WANT_KEY_TYPE_ECC_KEY_PAIR_EXPORT && !PSA_ACCEL_KEY_TYPE_ECC_KEY_PAIR_EXPORT_MONTGOMERY_448

