	bool
	default y
	depends on PSA_WANT_ECC_TWISTED_EDWARDS_448
	depends on PSA_WANT_KEY_TYPE_ECC_PUBLIC_KEY && !PSA_ACCEL_KEY_TYPE_ECC_PUBLIC_KEY_TWISTED_EDWARDS_448

