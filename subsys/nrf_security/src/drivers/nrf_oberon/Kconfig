	depends on PSA_NEED_OBERON_KEY_TYPE_ECC_PUBLIC_KEY_SECP    || \
			PSA_NEED_OBERON_KEY_TYPE_ECC_PUBLIC_KEY_MONTGOMERY || \
			PSA_NEED_OBERON_KEY_TYPE_ECC_PUBLIC_KEY_TWISTED_EDWARDS

