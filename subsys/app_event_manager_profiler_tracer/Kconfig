config APPLICATION_EVENT_MANAGER_PROFILER_TRACER
	depends on APPLICATION_EVENT_MANAGER
	bool "Log events to Profiler"
	select PROFILER
	select APPLICATION_EVENT_MANAGER_POSTINIT_HOOK
	select APPLICATION_EVENT_MANAGER_SUBMIT_HOOKS
	select APPLICATION_EVENT_MANAGER_PREPROCESS_HOOKS
	select APPLICATION_EVENT_MANAGER_POSTPROCESS_HOOKS
	select APPLICATION_EVENT_MANAGER_TRACE_EVENT_DATA
	help
	  Application Event Manager will use profiler event count equal to Application Event Manager profiled event count
	  + 2 events for processing event start/end.

if APPLICATION_EVENT_MANAGER_PROFILER_TRACER

config APPLICATION_EVENT_MANAGER_PROFILER_TRACER_TRACE_EVENT_EXECUTION
	bool "Trace events execution"
	default y

config APPLICATION_EVENT_MANAGER_PROFILER_TRACER_PROFILE_EVENT_DATA
	bool "Profile data connected with event"

endif # APPLICATION_EVENT_MANAGER_PROFILER_TRACER
