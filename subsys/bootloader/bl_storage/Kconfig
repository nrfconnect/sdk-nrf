config SECURE_BOOT_STORAGE
	bool "Functions for accessing the bootloader storage"

config SB_IMPLEMENTATION_ID
	bool "Uniquely identifies the underlying immutable PSA RoT."

config SB_IMPLEMENTATION_ID_VALUE
	string "32 byte Implementation ID value to program into the provision.hex file."
	default "Company X Device Z NSIB x.y.z __"
	depends on SB_IMPLEMENTATION_ID
	help
	  Must be exactly 32 characters long.
