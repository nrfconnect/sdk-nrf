#include <autoconf.h>

zboss_nvram:
  placement:
    after: [app]
    align: {start: CONFIG_FPROTECT_BLOCK_SIZE}
  inside: [nonsecure_storage]
  size: CONFIG_PM_PARTITION_SIZE_ZBOSS_NVRAM

zboss_product_config:
  placement:
    after: [zboss_nvram]
  inside: [nonsecure_storage]
  size: CONFIG_PM_PARTITION_SIZE_ZBOSS_PRODUCT_CONFIG
