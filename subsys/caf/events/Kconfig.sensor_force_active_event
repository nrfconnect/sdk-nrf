config CAF_SENSOR_FORCE_ACTIVE_EVENTS
	bool "Sensor force active event"
	help
	  Enable senor event to force the sensor stay active even if idle state is detected.

config CAF_INIT_LOG_SENSOR_FORCE_ACTIVE_EVENTS
	bool "Log sensor force active event"
	depends on LOG
	depends on CAF_POWER_MANAGER_EVENTS
	default y
	help
	  Log the sensor force active event.
