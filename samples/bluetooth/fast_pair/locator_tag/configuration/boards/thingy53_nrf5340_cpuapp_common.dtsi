/ {
	aliases {
		pwm-spk = &pwm_spk0;
		gyro-pwr = &sensor_pwr_ctrl;
		gyro = &bmi270;
	};

	pwmspk {
		compatible = "pwm-leds";
		pwm_spk0: pwm-spk-0 {
			pwms = <&pwm1 0 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
		};
	};
};

&spi3 {
	bmi270: spi-dev-bmi270@1 {
		status = "okay";
	};
};
