/ {
	aliases {
		pwm-spk = &pwm_spk0;
		motion-detector = &adxl362;
	};

	pwmspk {
		compatible = "pwm-leds";

		pwm_spk0: pwm-spk-0 {
			pwms = <&pwm1 0 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
		};
	};
};

&adxl362 {
	status = "okay";
};
