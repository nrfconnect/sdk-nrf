source "Kconfig.zephyr"

menu "Bluetooth Mesh BLOB Transfer Sample"

config BT_MESH_BLOB_TX_MAX_TARGETS
	int "Maximum number of targets to send blob over mesh"
	default 4
	range 1 256
	help
	  When a BLOB Client sends BLOB data to BLOB Servers, the maximum number of
	  unicast addresses to target for BLOB transfers.

endmenu

module = BT_MESH_BLOB_XFER
module-str = BT Mesh BLOB Transfer model
