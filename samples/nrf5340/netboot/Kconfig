menu "nRF5340 Network Core Bootloader Sample Settings"

config NETBOOT_MIN_PARTITION_SIZE
	bool "Use minimimum partition size"

config B0N_SIZE
	hex
	# Since locking granularity is 2kB, ensure that size of `b0n` span is aligned.
	# If minimal config is enabled the binary will be around 5kB.
	# Note: Provision partition is 0x280 bytes.
	default 0x8580 if PM_PARTITION_SIZE_PROVISION=0x280
	default 0x2580 if PM_PARTITION_SIZE_PROVISION=0x280 && NETBOOT_MIN_PARTITION_SIZE
	default 0x8800
	prompt "Size of B0n partion, must be 2kB alined together with PROVISION partion"

endmenu

menu "Zephyr Kernel"
source "Kconfig.zephyr"
endmenu
