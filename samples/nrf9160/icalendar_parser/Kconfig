menu "Internet Calendar Parser sample"

config DOWNLOAD_HOST
	string "Calendar host to connect"

config DOWNLOAD_FILE
	string "Calendar file to download"

config DOWNLOAD_INTERVAL
	int "The interval to download calendar from server in seconds"
	default 60

config ICAL_SEC_TAG
	int "Security tag to provision certificate"
	default 1

config MAX_PARSED_COMPONENTS
	int "Maximum number of parsed calendar component"
	default 100

endmenu

menu "Zephyr Kernel"
source "Kconfig.zephyr"
endmenu
