	  Use custom radio.

endchoice

config NETCORE_IMAGE_NAME
	default "remote_rad" if NETCORE_CUSTOM_RADIO

config NETCORE_IMAGE_PATH
	default "$(ZEPHYR_NRF_MODULE_DIR)/samples/nrf54h20/idle_relocated_tcm/remote" if NETCORE_CUSTOM_RADIO
