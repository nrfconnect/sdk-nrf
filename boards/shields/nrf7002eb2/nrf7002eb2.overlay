/ {
	chosen {
		zephyr,wifi = &wlan0;
	};
};

&wifi_spi {
	status = "okay";

	nrf70: nrf7002-spi@0 {
		compatible = "nordic,nrf7002-spi";
		status = "okay";

		/* Include common nRF70 overlays */
		#include "nrf7002eb2_common.dtsi"
		#include "nrf7002eb2_common_5g.dtsi"
	};
};
