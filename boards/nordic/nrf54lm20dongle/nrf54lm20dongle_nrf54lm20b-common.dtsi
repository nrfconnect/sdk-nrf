#include "nrf54lm20dongle_nrf54lm20b-pinctrl.dtsi"

/ {
	leds {
		compatible = "gpio-leds";

		led0_red: led_0 {
			gpios = <&gpio1 29 GPIO_ACTIVE_LOW>;
			label = "Red LED 0";
		};

		led0_green: led_1 {
			gpios = <&gpio1 30 GPIO_ACTIVE_LOW>;
			label = "Green LED 0";
		};

		led0_blue: led_2 {
			gpios = <&gpio1 31 GPIO_ACTIVE_LOW>;
			label = "Blue LED 0";
		};

		led1_red: led_3 {
			gpios = <&gpio1 24 GPIO_ACTIVE_LOW>;
			label = "Red LED 1";
		};

		led1_green: led_4 {
			gpios = <&gpio1 26 GPIO_ACTIVE_LOW>;
			label = "Green LED 1";
		};

		led1_blue: led_5 {
			gpios = <&gpio1 27 GPIO_ACTIVE_LOW>;
			label = "Blue LED 1";
		};
	};

	pwmleds {
		compatible = "pwm-leds";

		red_pwm_led: pwm_led_0 {
			pwms = <&pwm20 0 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
		};

		green_pwm_led: pwm_led_1 {
			pwms = <&pwm20 1 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
		};

		blue_pwm_led: pwm_led_2 {
			pwms = <&pwm20 2 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
		};
	};

	buttons {
		compatible = "gpio-keys";

		dfu_button: button_0 {
			gpios = <&gpio0 0 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Dfu button";
			zephyr,code = <INPUT_KEY_0>;
		};

		btn: button_1 {
			gpios = <&gpio1 19 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Button 1";
			zephyr,code = <INPUT_KEY_0>;
		};
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0_red;
		led1 = &led0_green;
		led2 = &led0_blue;
		led3 = &led1_red;
		led4 = &led1_green;
		led5 = &led1_blue;
		led0-red = &led0_red;
		led0-green = &led0_green;
		led0-blue = &led0_blue;
		led1-red = &led1_red;
		led1-green = &led1_green;
		led1-blue = &led1_blue;
		pwm-led0 = &red_pwm_led;
		pwm-led1 = &green_pwm_led;
		pwm-led2 = &blue_pwm_led;
		red-pwm-led = &red_pwm_led;
		green-pwm-led = &green_pwm_led;
		blue-pwm-led = &blue_pwm_led;
		sw0 = &btn;
		watchdog0 = &wdt31;
	};
};

&uart20 {
	current-speed = <115200>;
	pinctrl-0 = <&uart20_default>;
	pinctrl-1 = <&uart20_sleep>;
	pinctrl-names = "default", "sleep";
};

&uart30 {
	current-speed = <115200>;
	pinctrl-0 = <&uart30_default>;
	pinctrl-1 = <&uart30_sleep>;
	pinctrl-names = "default", "sleep";
};

&i2c21 {
	compatible = "nordic,nrf-twim";
	pinctrl-0 = <&i2c21_default>;
	pinctrl-1 = <&i2c21_sleep>;
	pinctrl-names = "default", "sleep";
};

&pwm20 {
	status = "okay";
	pinctrl-0 = <&pwm20_default>;
	pinctrl-1 = <&pwm20_sleep>;
	pinctrl-names = "default", "sleep";
};
