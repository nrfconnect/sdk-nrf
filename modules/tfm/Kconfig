config TFM_BOARD
	string
	default "${ZEPHYR_NRF_MODULE_DIR}/modules/tfm/boards/nrf9160" if SOC_NRF9160_SICA
	default "${ZEPHYR_NRF_MODULE_DIR}/modules/tfm/boards/nrf5340_cpuapp_eng_a" if SOC_NRF5340_CPUAPP_QKAA && NRF5340_CPUAPP_ERRATUM19
	default "${ZEPHYR_NRF_MODULE_DIR}/modules/tfm/boards/nrf5340_cpuapp" if SOC_NRF5340_CPUAPP_QKAA && !NRF5340_CPUAPP_ERRATUM19
	depends on TRUSTED_EXECUTION_NONSECURE
	help
	  Redefintition of TFM_BOARD to use out-of-tree boards. These depend on
	  ${TFM_BOARD_BASE_DIR} being set to the TFM board dir inside sdk-nrf.
