menu "Volume"

config BT_AUDIO_VOL_DEFAULT
	int "Default volume"
	range 0 255
	default 195
	help
	  The default volume when starting a volume control renderer.

config BT_AUDIO_VOL_STEP_SIZE
	int "Volume adjust step size"
	range 6 32
	default 16

#----------------------------------------------------------------------------#
menu "Log level"

module = BT_VOL
module-str = bt-vol
source "subsys/logging/Kconfig.template.log_config"

endmenu # Log level
endmenu # Volume
