# UART COBS module configuration

menuconfig UART_COBS
	bool "UART COBS library"
	depends on SERIAL
	depends on UART_ASYNC_API
	help
	  Library for transferring Consistent Overhead Byte Stuffing (COBS)
	  encoded packets using the UART.

if UART_COBS

config UART_COBS_THREAD_PRIO
	int "UART COBS library workqueue thread priority level"
	range 0 NUM_PREEMPT_PRIORITIES
	default 0 if !MULTITHREADING
	default 10
	help
	  Thread priority for the workqueue used by the UART COBS library
	  for processing UART events and dispatching application events.

config UART_COBS_THREAD_STACK_SIZE
	int "UART COBS library workqueue thread stack size"
	default 1024
	help
	  Stack size for the workqueue used by the UART COBS library
	  for processing UART events and dispatching application events.

module=UART_COBS
module-str=UART COBS library
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"

endif # UART_COBS
