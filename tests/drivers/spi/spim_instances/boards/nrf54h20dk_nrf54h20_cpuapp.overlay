				<NRF_PSEL(SPIM_MOSI, 2, 8)>;
		};
	};

	spi134_sleep_test: spi134_sleep_test {
		group1 {
			psels = <NRF_PSEL(SPIM_SCK, 1, 1)>,
				<NRF_PSEL(SPIM_MISO, 1, 8)>,
				<NRF_PSEL(SPIM_MOSI, 2, 8)>;
			low-power-enable;
		};
	};

	spi135_default_test: spi135_default_test {
		group1 {
			psels = <NRF_PSEL(SPIM_SCK, 1, 2)>,
				<NRF_PSEL(SPIM_MISO, 1, 9)>,
