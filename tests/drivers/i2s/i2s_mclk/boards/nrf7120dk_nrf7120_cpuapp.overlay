/* i2s-node0 is the transmitter/receiver */

/ {
	aliases {
		i2s-node0 = &tdm;
	};

	zephyr,user {
		gpios = <&gpio1 0 GPIO_ACTIVE_HIGH>,  /* Connect with TDM_MCK */
			<&gpio1 11 GPIO_ACTIVE_HIGH>;  /* Connect with TDM_FSYNC_M */
	};
};

&gpio1 {
	status = "okay";
};

&gpiote20 {
	status = "okay";
};

&pinctrl {
	tdm_default_alt: tdm_default_alt {
		group1 {
			psels = <NRF_PSEL(TDM_MCK, 1, 14)>,
				<NRF_PSEL(TDM_SCK_M, 1, 13)>,
				<NRF_PSEL(TDM_FSYNC_M, 1, 12)>,
				<NRF_PSEL(TDM_SDOUT, 1, 4)>,  /* TDM_SDOUT shorted to TDM_SDIN */
				<NRF_PSEL(TDM_SDIN, 1, 5)>;
		};
	};
};

&tdm {
	status = "okay";
	pinctrl-0 = <&tdm_default_alt>;
	pinctrl-names = "default";
	mck-frequency = <64000>;
};
