choice TEST_I2S_WORD_SIZE_IN_BITS
	prompt "I2S sample width in bits"
	default TEST_I2S_WORD_SIZE_8_BIT

config TEST_I2S_WORD_SIZE_8_BIT
	bool "8 bit"

config TEST_I2S_WORD_SIZE_16_BIT
	bool "16 bit"

config TEST_I2S_WORD_SIZE_32_BIT
	bool "32 bit"

endchoice

config TEST_I2S_WORD_SIZE
	int
	default 8 if TEST_I2S_WORD_SIZE_8_BIT
	default 16 if TEST_I2S_WORD_SIZE_16_BIT
	default 32 if TEST_I2S_WORD_SIZE_32_BIT

config TEST_I2S_ALLOWED_DATA_OFFSET
	int "Allowed offset in received data"
	default 2 if DT_HAS_NORDIC_NRF_I2S_ENABLED || DT_HAS_NORDIC_NRF_TDM_ENABLED
	default 0
	help
	  Maximum allowed offset between sent and received samples. Non-zero
	  value of this option may be needed when GPIO loopback is used.

source "Kconfig.zephyr"
